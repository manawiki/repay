    "@remix-run/react": "^2.0.0",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "isbot": "^3.6.13",
    "morgan": "^1.10.0",
    "payload": "^2.0.4",
    "react": "^18.2.0",
